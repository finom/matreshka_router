{
  "name": "matreshka-router",
  "version": "0.0.0-auto",
  "description": "Router-like plugin for Matreshka.js",
  "main": "npm/index",
  "scripts": {
    "install": "if-env CI=true && echo 'Continious Integration mode' || echo 'Local mode' && git update-index --skip-worktree ./bundle/*",
    "test": "npm run unit && npm run lint",
    "unit": "babel-node node_modules/.bin/babel-istanbul cover test/index.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "check-updates": "ncu",
    "upgrade": "npm run check-updates -- --upgradeAll && npm install",
    "lint": "eslint ./test ./src",
    "compile-npm": "rimraf npm && babel src -d npm",
    "bundle": "rimraf bundle && webpack",
    "release": "npm run compile-npm && npm publish",
    "release-bundle": "npm run bundle && git config user.email 'andrey.a.gubanov@gmail.com' && git config user.name 'Andrey Gubanov (his digital copy)' && git add bundle/* && git commit --allow-empty -m \"chore: Publishing ${npm_package_version}\" && git push https://$GH_TOKEN@github.com/matreshkajs/matreshka-router.git HEAD:next",
    "semantic-release": "semantic-release pre && npm run release && semantic-release post && npm run release-bundle",
    "commit": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-simple-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "refactor",
        "perf",
        "test",
        "chore",
        "revert"
      ]
    },
    "ghooks": {
      "commit-msg": "validate-commit-msg"
    }
  },
  "release": {
    "branch": "next"
  },
  "publishConfig": {
    "tag": "next"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/matreshkajs/matreshka-router.git"
  },
  "keywords": [
    "matreshka",
    "router"
  ],
  "author": "Andrey Gubanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matreshkajs/matreshka-router/issues"
  },
  "homepage": "https://github.com/matreshkajs/matreshka-router#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-istanbul": "^0.11.0",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0",
    "commitizen": "^2.8.6",
    "coveralls": "^2.11.12",
    "cz-simple-conventional-changelog": "0.0.0",
    "eslint": "^3.4.0",
    "eslint-config-airbnb": "^10.0.1",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "ghooks": "^1.3.2",
    "if-env": "^1.0.0",
    "jasmine": "^2.5.0",
    "jasmine-spec-reporter": "^2.7.0",
    "jsdom": "^9.5.0",
    "matreshka": "^2.0.0-prealpha.17",
    "npm-check-updates": "^2.8.0",
    "rimraf": "^2.5.4",
    "semantic-release": "^4.3.5",
    "validate-commit-msg": "^2.8.0",
    "webpack": "^1.13.2",
    "webpack-generate-umd-externals": "0.0.1"
  },
  "peerDependencies": {
    "matreshka": "^2.0.0-prealpha.17"
  }
}
