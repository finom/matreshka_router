{
    "parser": "babel-eslint",
    "extends": [
        "plugin:import/errors",
        "plugin:import/warnings",
        "airbnb"
    ],
    "rules": {
        "indent": ["error", 4],
        "no-var": "error",
        "comma-dangle": ["error", "never"],
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    },
    "env": {
        "jasmine": true
    },
    "globals": {
        "window": true
    }
}
